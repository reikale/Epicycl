  <div class="card-body">
        @if(@Model.Terminated == null)
        {
            <p class="card-text text-success">This satellite is active</p>
        }else{
             <p class="card-text text-danger">This satellite was terminated</p>
        }
        <p class="card-text"> @Model.Description</p>
  </div>
  
 @* <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>*@
    @if(Model.Terminated == null)
    {
        <div class="card border-success mb-3" style="max-width: 20rem;">
          <div class="card-body">
            <h4 class="card-title">Satellite was launched @Model.LaunchDate</h4>
          </div>
        </div>
    }else
        {
            <div class="card border-warning mb-3" style="max-width: 20rem;">
          <div class="card-body">
            <h4 class="card-title">Satellite was launched @Model.Terminated</h4>
            <h4 class="card-title">Terminated @Model.Terminated</h4>
          </div>
        </div>
        }

  
</div>





