@model Epicycl.Models.Satellite;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mb-3">
  <h3 class="card-header">@Model.Name</h3>
  <div class="card-body">
    <h5 class="card-title">Space Agency: @Model.Operator</h5>
    
    @if(@Model.Type == "Earth observation satellites")
    {
        <h6 class="card-subtitle text-muted">@Model.Type</h6>
    }
    @if(@Model.Type == "Astronomical satellites")
    {
        <h6 class="card-subtitle text-muted">@Model.Type</h6>
    }

  </div>
